@inject Wee.Common.Contracts.IMenuService menuService
<div class="site-menubar">
    <div class="site-menubar-body">
        <div>
            <div>
                <ul class="site-menu" data-plugin="menu">
                    <!-- GERADO PELO MENU SERVICE -->

                    @{
                        var menus = menuService.BuildMenu();
                    }
                    @foreach (var menu in menus)
                    {
                        <li class="site-menu-category">@menu.Key</li>

                        await Html.RenderPartialAsync("Themes/Remark/_MenuItem", menu.Value);
                    }
                    <!-- /GERADO PELO MENU SERVICE -->

                </ul>

                <div class="site-menubar-section">
                    <h5>
                        Uso do HD
                        <span class="pull-xs-right">30%</span>
                    </h5>
                    <div class="progress progress-xs">
                        <div class="progress-bar active" style="width: 30%;" role="progressbar"></div>
                    </div>
                    <h5>
                        Uso de Memória
                        <span class="pull-xs-right">60%</span>
                    </h5>
                    <div class="progress progress-xs">
                        <div class="progress-bar progress-bar-warning" style="width: 60%;" role="progressbar"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="site-menubar-footer">
        <a href="javascript: void(0);" class="fold-show" data-placement="top" data-toggle="tooltip" data-original-title="Configurações">
            <span class="icon wb-settings" aria-hidden="true"></span>
        </a>
        <a href="javascript: void(0);" data-placement="top" data-toggle="tooltip" data-original-title="Bloquear Sessão">
            <span class="icon wb-eye-close" aria-hidden="true"></span>
        </a>
        <a href="javascript: void(0);" data-placement="top" data-toggle="tooltip" data-original-title="Sair">
            <span class="icon wb-power" aria-hidden="true"></span>
        </a>
    </div>
</div>