    <![endif]-->

    <script src="/wwwroot/themes/remark/classic/global/vendor/breakpoints/breakpoints.js"></script>
    <script>
        Breakpoints();
    </script>

    @RenderSection("head_scripts", required: false)
}

@{ await Html.RenderPartialAsync("Themes/Remark/_Header"); }

<div class="page">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Page Title</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="active breadcrumb-item">Pagina</li>
        </ol>
    </div>
    <!-- End Page Header -->
    <!-- Page Content -->
    <div class="page-content">
        <!-- Panel -->
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Panel Title</h3>
            </div>
            <div class="panel-body">
                @RenderBody()
            </div>
        </div>
        <!-- End Panel -->
    </div>
    <!-- End Page Content -->
</div>


@{ await Html.RenderPartialAsync("Themes/Remark/_Menu"); }

